extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-left Student (DAW2020)
      if student !== null
        .w3-container
          table.w3-table-all
            tr 
              th Number
              th Name
              th Git
              th TPCs
            
              tr
                td= student.numero
                td= student.nome
                td= student.git
                td= student.tpc
      else
        .w3-container
          p Wrong Id
      footer.w3-container.w3-teal
        a(href="/")
          address [Voltar ao inicio]
        address Gerado por dawApp :: 2020-Nov, jcr

  
